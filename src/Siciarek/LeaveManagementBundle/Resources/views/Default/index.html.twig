{% extends '::base.html.twig' %}

{% block body %}

    <div class="page-header">
        <h1>Leave list</h1>
    </div>

    <table class="table table-hover">
        <thead>
        <tr>
            <th>Employee</th>
            <th>Covered by</th>
            <th>From</th>
            <th>To</th>
            <th>Length</th>
            <th>Working days</th>
            <th>Description</th>
            <th>&nbsp;</th>
        </tr>
        </thead>
        <tbody>
        {% for i in items %}
            <tr>
                <td>{{ i.employee }}</td>
                <td>{{ i.coveredBy }}</td>
                <td>{{ i.startsAt|date('Y-m-d') }}</td>
                <td>{{ i.endsAt|date('Y-m-d') }}</td>
                <td>{{ i.length }}</td>
                <td>{{ i.workingDays }}</td>
                <td>{{ (i.description?:'&#0151;')|raw }}</td>
                <td>
                    <a title="Approve" class="btn btn-success btn-xs">
                        <i class="icon-check icon-large"></i>
                    </a>
                    <a title="Cancel" class="btn btn-danger btn-xs">
                        <i class="icon-ban-circle icon-large"></i>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}